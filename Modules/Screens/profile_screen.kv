<ProfileScreen>:
    name: 'profile_screen'
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)

        MDLabel:
            text: "Profile"
            halign: 'center'
            font_style: 'H4'

        MDLabel:
            id: name_field
            text: "Name"
            mode: "rectangle"

        MDLabel:
            id: email_field
            text: "Email"
            mode: "rectangle"

        MDDropDownItem:
            id: belt_rank_field
            text: "Belt Rank"
            on_release: root.menu.open()
